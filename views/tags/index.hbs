<h1>
  {{title}}
</h1>
{{! Add links to CRUD operations }}
{{#if user}}
  <a href="/tags/add" class="btn btn-success">Add a new Tag</a>

  {{! To Show data }}
  <table class="table table-striped table-hover">
    <thead>
      <th>Name</th>
      <th>Code</th>
    </thead>
    <tbody>
      {{#each dataset}}
        <tr>
          <td>{{this.name}}</td>
          <td>{{this.code}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{/if}}
{{#unless user}}
  <p>You need to be logged in to view the tags.</p>
{{/unless}}